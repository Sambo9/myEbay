<%= form_for(@product) do |f| %>

<div class="container">
    <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-9 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info" >
            <div class="panel-heading">
                <div class="panel-title">Product</div>
            </div>

            <div style="padding-top:30px" class="panel-body" >

                <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

                <form id="loginform" class="form-horizontal" role="form">

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-barcode"></i></span>
                        <%= f.text_field :title, autofocus: true, :class => "form-control", placeholder: 'Title' %>
                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-info-sign"></i></span>
                        <%= f.text_field :description, :class => "form-control", placeholder: 'Description' %>
                    </div>


                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-euro"></i></span>
                        <%= f.number_field :price, :class => "form-control", placeholder: 'Price' %>
                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                       <span class="input-group-addon"><i class="glyphicon glyphicon-tags"></i></span>
                       <div class="ui fluid input"><%= autocomplete_field_tag :category_id, params[:categories], autocomplete_category_name_products_path, {class: "search-query", placeholder: "Categories", type: "search"} %>
                       </div>
                    </div>


                    <div style="margin-top:10px" class="form-group">
                        <div>
                            <%= f.submit "Create Product", class: "button basic ui blue" %>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <% end %>
