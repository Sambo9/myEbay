<div class="ui card centered">
   <div class="content">
      <img class="ui avatar image" src="http://semantic-ui.com/images/avatar/large/elliot.jpg">
      <span class="text-center"><%= @product.title %></span>
   </div>
   <div class="image">
      <img src="<%= @product.image %>" />
   </div>
   <div class="content">
      Price :
      <span class="right floated">
         <%= @product.price %>
         <i class="euro icon"></i>
      </span>
   </div>
   <div class="content">
      Posted : <strong class='right floated'><%= @product.created_at.strftime("%d %b. %Y") %> </strong>
   </div>
   <div class="content">
      <% if current_user.id == @product.user_id %>
      <%= rating_for @product, "product", readonly: true, half_show: true %>
      <% else %>
      Rating : <strong class='right floated'></strong><%= rating_for @product, "product", :half_show => true %> </strong>
      <% end %>
   </div>
   <div class="content">
      <%= link_to @user do %> <i class="user icon"></i> <%= @user.first_name %> <%= @user.last_name %> <% end %>
      <br>
   </div>
   <% if current_user != nil && current_user.role == 'ADMIN' || current_user != nil && current_user.id == @product.user_id %>
   <div class="extra">
      <%= link_to edit_product_path(@product), :class=>  "ui blue basic circular button" do %> <i class="edit icon"></i><%= "Edit"  %><% end %>
      <%= link_to @product, method: :delete, data: { confirm: 'Are you sure?' }, :class=>  "ui red basic circular button" do %> <i class="trash outline icon"></i><%= "Del"  %><% end %>
   </div>
   <% end %>
</div>

<div>
   <%= link_to "Back", :back, :class=>  "ui blue inverted basic button" %>
</div>

<% @commentable = @product %>
<% @comments = @commentable.comments.recent.limit(10).all %>

<div class="ui comments">
   <h3 class="ui dividing header"> Latest Comments</h3>
   <% @comments.each do |c| %>
   <div class="comment">
      <a class="avatar">
         <img src="http://semantic-ui.com/images/avatar/small/elliot.jpg">
      </a>
      <div class="content">
         <a class="author"><%= User.find(c.user_id).first_name %></a>
         <div class="metadata">
            <span class="date"><%= c.created_at.strftime("%d %b. %Y  %k:%M:%S") %></span>
         </div>
         <div class="text">
            <%= c.comment %>
         </div>
      </div>
   </div>
   <% end %>

   <%= form_tag "/products/add_new_comment" do %>
   <form class="ui reply form">
      <div class="field">
         <%= hidden_field_tag "id", @product.id %>
         <%= text_area_tag (:comment) %>
      </div>
      <div>
         <%= button_tag(type: "submit", class: "ui blue icon button") do %>
         <i class="icon edit"></i> Send review
         <% end %>
      </div>
   </form>
   <% end %>
</div>
